<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/background_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/number_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="?attr/background_color"
                android:textAlignment="center"
                android:textColor="?attr/secondary"
                android:textSize="25sp"
                tools:text="553085645" />


            <ImageView
                android:id="@+id/delete_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:padding="5dp"
                android:src="@drawable/material_backspace"
                app:tint="?attr/secondary" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/tertiary_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <androidx.cardview.widget.CardView
                android:id="@+id/one_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/two_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/three_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <androidx.cardview.widget.CardView
                android:id="@+id/four_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/five_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/six_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <androidx.cardview.widget.CardView
                android:id="@+id/seven_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/eight_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/nine_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <androidx.cardview.widget.CardView
                android:id="@+id/star_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/zero_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hash_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/call_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="?attr/surface_color"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="#"
                    android:textColor="?attr/secondary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/call_button_height"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#25a244"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/call_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:backgroundTint="#25a244"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:text="@string/call"
                android:textColor="@color/white"
                tools:ignore="RtlHardcoded" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>